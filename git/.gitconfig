[user]
	name = Hrvoje Šimić
	email = shime@twobucks.co
	username = shime
[credential]
	helper = cache
[pull]
	rebase = true
[github]
	user = shime
[push]
	default = current
	followTags = true
[color]
	ui = true
[url "https://"]
	insteadOf = git://
[url "https://github.com/"]
	insteadOf = git://github.com/
[help]
	autocorrect = 7
[ghi "highlight"]
	style = vim
[ghi]
	editor = vim
[rebase]
  autosquash = true

[alias]
  a  = add
  c  = commit --allow-empty
  ca = commit --allow-empty --amend
  co = checkout
  d  = diff -w
  dc = diff -w --cached
  l  = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  rs = reset
  s  = status -sb
  ss = stash save
  sp = stash pop
  u  = reset HEAD~1
[core]
	excludesfile = ~/.gitignore
	pager = less -+F
[diff]
	compactionHeuristic = true
[pager]
	diff = sed \"s/^\\([^-+ ]*\\)[-+ ]/\\\\1/\"
	log = sed \"s/^\\([^-+ ]*\\)[-+ ]/\\\\1/\"
	show = sed \"s/^\\([^-+ ]*\\)[-+ ]/\\\\1/\"
