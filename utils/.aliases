#!/usr/bin/env bash

# dir stuff
alias ..='cd ..'
alias l='ls'
alias lss='ls++'

# vim stuff
alias e='vim'
alias vimrc='e ~/.vimrc'
alias tmuxrc='e ~/.tmux.conf'
alias zshrc='e ~/.zshrc'
alias bashrc='e ~/.bashrc'
alias aliases='e ~/.aliases'
alias vi='nvim'
alias vim='nvim'

# ruby stuff
alias r="rails $*"
alias bi="bundle install"
alias be="bundle exec $*"
alias rt='rake test'
alias m="rake db:migrate"
alias G="e Gemfile"
alias R="e Rakefile"
alias C="rails console"

function gcm(){
  git commit -m "$*"
}

function gcam(){
  git commit -am "$*"
}

function release(){
  version=$1
  git commit -m "release $version"
  git tag -a "$version" -m "$version" || git reset HEAD~1
}

# npm stuff
alias ni="npm install"
alias nis="npm install --save"
alias nid="npm install --save-dev"
alias ns="npm search"
alias nd="npm docs"

# misc
alias g="git"
alias s="sudo"
alias so="source"
alias t="tmux -2"
alias myip="curl -s icanhazip.com"
alias dotfiles="cd ~/.dotfiles"
alias mkdir="mkdir -p"
alias reload="exec bash -l"
