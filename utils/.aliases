#!/usr/bin/env bash
# shopt -s expand_aliases

# dir stuff
alias ..='cd ..'
alias l='ls'
alias lss='ls++'
# alias cat='ccat'

# vim stuff
alias vi='nvim'
alias e='nvim'
alias vimrc='e ~/.vimrc'
alias tmuxrc='e ~/.tmux.conf'
alias zshrc='e ~/.zshrc'
alias bashrc='e ~/.bashrc'
alias aliases='e ~/.aliases'

# ruby stuff
alias r="./bin/rails $*"
alias bi="bundle install"
alias be="bundle exec $*"
alias ra='./bin/rake'
alias rat='./bin/rake test'
alias m="./bin/rake db:migrate"
alias rollback="./bin/rake db:rollback"
alias g="e Gemfile"
alias c="./bin/rails console"

function gcm(){
  git commit -m "$*"
}

function gcam(){
  git commit -am "$*"
}

function release(){
  version=$1
  git commit -m "release $version"
  git tag -a "$version" -m "$version" || git reset HEAD~1
}

# npm stuff
alias npm="npm --cache-min 9999999"
alias ni="npm install"
alias nis="npm install --save"
alias nid="npm install --save-dev"
alias ns="npm search"
alias nd="npm docs"

# misc
alias g="git"
alias s="sudo"
alias so="source"
alias t="tmux -2"
alias ip="curl -s icanhazip.com"
alias dotfiles="cd ~/.dotfiles"
alias mkdir="mkdir -p"
alias reload="exec bash -l"
alias gti="git"

export FZF_DEFAULT_COMMAND='ag -g ""'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
function f(){
  vim $(fzf)
}
