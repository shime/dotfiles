#! /usr/bin/env bash

function run(){
  if ps ax | grep ffmpeg | grep -v grep > /dev/null; then
    ps ax | grep ffmpeg | grep -v grep | cut -d ' ' -f 1 | xargs kill
  else
    ffcast -qs rec ~/Videos/`date +%s`.gif
  fi
}

if hash ffcast 2>/dev/null; then
  run $1
else
  echo '[error] ffcast not found, do you have it installed?'
fi
